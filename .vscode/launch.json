{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: watch",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "presentation": {
                "group": "1_launch",
                "order": 1
            }
        },
        {
            "name": "Debugger",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/debugger/titaniumDebugger.ts",
            "args": [
                "--server=4711"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js",
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "presentation": {
                "group": "1_launch",
                "order": 2
            }
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/src/test/common/fixtures/alloy-project",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test/unit"
            ],
            "outFiles": [
                "${workspaceFolder}/out/test/unit/**/*.js"
            ],
            "preLaunchTask": "npm: watch",
            "presentation": {
                "group": "2_tests",
                "order": 1
            },
            "env": {
                "DEBUG": "1"
            }
        },
        {
            "name": "Extension UI Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/out/test/integration/runTests.js",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "presentation": {
                "group": "2_tests",
                "order": 1
            }
        },
        {
            "name": "Extension UI Tests - Insider",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/out/test/integration/runTests.js",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "presentation": {
                "group": "2_tests",
                "order": 1
            },
            "env": {
                "CODE_VERSION": "insider"
            }
        },
        {
            "name": "Extension UI Smokes",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/out/test/integration/runTests.js",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "presentation": {
                "group": "2_tests",
                "order": 1
            },
            "env": {
                "SMOKE": "1"
            }
        }
    ],
    "compounds": [
        {
            "name": "Extension + Debugger",
            "configurations": [ "Extension", "Debugger" ],
            "presentation": {
                "group": "1_launch",
                "order": 3
            }
        }
    ]
}
